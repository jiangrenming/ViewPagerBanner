<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@mipmap/tanchuang_bg_pic"
            android:layout_width="match_parent"
            android:gravity="center_horizontal|center"
            android:layout_marginTop="30px"
            android:layout_height="500px">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="393px"
                android:layout_height="393px"
                android:src="@mipmap/tanchuang_erweima_pic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical"
            android:background="@color/main_bg"
            android:layout_height="400px">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginBottom="10px"
                android:layout_height="44px"
                android:weightSum="1">
                <ImageView
                    android:layout_width="16px"
                    android:layout_height="16px"
                    android:layout_marginRight="20px"
                    android:scaleType="fitXY"
                    android:background="@drawable/dot_select" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="一等奖:"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="法国进口巴黎水"
                    android:textColor="@color/prize_deng"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.5" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="44px"
                android:layout_marginBottom="10px"
                android:weightSum="1">
                <ImageView
                    android:layout_width="16px"
                    android:layout_height="16px"
                    android:layout_marginRight="20px"
                    android:scaleType="fitXY"
                    android:background="@drawable/dot_select" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="二等奖:"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:gravity="center_horizontal"
                    android:text="加多宝凉茶"
                    android:paddingRight="60px"
                    android:textColor="@color/prize_deng"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginBottom="10px"
                android:layout_height="44px"
                android:weightSum="1">
                <ImageView
                    android:layout_width="16px"
                    android:layout_height="16px"
                    android:layout_marginRight="20px"
                    android:scaleType="fitXY"
                    android:background="@drawable/dot_select" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="三等奖:"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:text="百事可乐"
                    android:paddingRight="86px"
                    android:gravity="center_horizontal"
                    android:textColor="@color/prize_deng"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="44px"
                android:layout_marginBottom="10px"
                android:weightSum="1">
                <ImageView
                    android:layout_width="16px"
                    android:layout_height="16px"
                    android:layout_marginRight="20px"
                    android:scaleType="fitXY"
                    android:background="@drawable/dot_select" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="四等奖:"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="美味口水娃"
                    android:paddingRight="60px"
                    android:gravity="center_horizontal"
                    android:textColor="@color/prize_deng"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" />
            </LinearLayout>
            <Button
                android:textColor="@color/comfirm"
                android:id="@+id/comfirm"
                android:layout_marginTop="10px"
                android:layout_width="420px"
                android:layout_height="80px"
                android:background="@mipmap/tanchuang_button_queding"
                android:text="确定" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="106px"
        android:src="@mipmap/tanchuang_topic_choujiangyouzi"/>
</RelativeLayout>